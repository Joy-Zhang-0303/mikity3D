    print "²¼¤ÎÈ¾·Â              : "; $lradius = <STDIN>;
    print "¾å¤ÎÈ¾·Â              : "; $sradius = <STDIN>;
    print "¹â¤µ              : "; $height = <STDIN>;
    print "Ê¬¼þ              : "; $per = <STDIN>;
    chop ($radius, $height, $per);
    &input_roll();
    &input_center();
}

