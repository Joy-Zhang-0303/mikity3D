    print "Ä¹·Â              : "; $lradius = <STDIN>;
    print "Ã»·Â              : "; $sradius = <STDIN>;
    print "¹â¤µ              : "; $height = <STDIN>;
    print "Ê¬¼þ              : "; $per = <STDIN>;
    chop ($radius, $height, $per);
