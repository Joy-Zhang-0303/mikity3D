<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/sampleSourceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sampleSourceText"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/sampleSourceButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sampleSourceButtonText" />
    
    <TextView
        android:id="@+id/sampleSourceFileNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:text="@string/sampleSourceFileNameView" />

</LinearLayout>