<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    
    <TableRow>
        <Button
                android:id="@+id/settingsBackButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/back" />
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/rotationSensorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotationSensorTextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="60dip"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/rotationSensorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="false" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/accelerometerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/accelerometerTextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="40dip"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/accelerometerButton"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="false" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/rotationLockTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/rotationLockTextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="20dip"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/rotationLockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="false" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/gridShowingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/gridShowingTextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="40dip"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/gridShowingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="false" />
    </TableRow>

    <TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/axisShowingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/axisShowingTextView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Space
            android:layout_width="60dip"
            android:layout_height="match_parent" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/axisShowingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:checked="false" />
    </TableRow>

</TableLayout>